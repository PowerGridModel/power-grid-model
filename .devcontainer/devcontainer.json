{
  "name": "power-grid-model",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/power-grid-model",
  "workspaceMount": "source=${localWorkspaceFolder},target=/power-grid-model,type=bind",

  "remoteUser": "root",
  "overrideCommand": true,

  // cache pip installs
  "mounts": [
    "type=volume,source=dev-pip-cache,target=/root/.cache/pip"
  ],

  "postCreateCommand": "bash -lc 'pre-commit install || true'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-toolsai.datawrangler",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cpptools-themes",
        "ms-vscode.test-adapter-converter",
        "njpwerner.autodocstring",
        "jeff-hykin.better-cpp-syntax",
        "matepek.vscode-catch2-test-adapter",
        "cschlosser.doxdocgen",
        "fredericbonnet.cmake-test-adapter",
        "sonarsource.sonarlint-vscode",
        "davidanson.vscode-markdownlint",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "editor.formatOnSave": true,
        "ruff.enable": true,
        "ruff.organizeImports": true,
        "python.terminal.activateEnvironment": false
      }
    }
  }
}