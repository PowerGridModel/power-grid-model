{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "uv sync",
      "type": "shell",
      "command": "uv",
      "args": ["sync", "--reinstall"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "ruff check",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "--fix", "."],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "ruff format",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "format", "."],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "mypy",
      "type": "shell",
      "command": "uv",
      "args": ["run", "mypy"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": ["$mypy"]
    },
    {
      "label": "pytest",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "markdownlint",
      "type": "shell",
      "command": "npx",
      "args": ["markdownlint", "--fix", "."],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "json linter",
      "type": "shell",
      "command": "npx",
      "args": ["biome", "format", "--write", "--files-ignore-unknown=true", "--no-errors-on-unmatched"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "cmake linter",
      "type": "shell",
      "command": "uv",
      "args": ["run", "gersemi", "-i", "--warnings-as-errors", "src/", "tests/", "cmake/"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "clang-format",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "find . \\( -name \"*.h\" -o -name \"*.c\" -o -name \"*.cpp\" -o -name \"*.hpp\" -o -name \"*.cc\" -o -name \"*.cxx\" \\) -exec uv run clang-format -style=file -i {} \\;"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "Get-ChildItem -Recurse -Include *.h, *.c, *.cpp, *.hpp, *.cc, *.cxx | ForEach-Object { uv run clang-format -style=file -i $_.FullName }"
        ]
      }
    }
  ]
}
