{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "files": {
    "includes": [
      "**/*.json",
      "**/*.jsonc",

      "!docs",
      "!tests/data/**/input.json",
      "!tests/data/**/*_output*.json",
      "!tests/data/**/update_batch.json",
      "!tests/unit/deprecated/data"
    ]
  },
  // ignore files specified in .gitignore
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120
    }
  },
  "overrides": [
    {
      // VS Code and devcontainer .json files allow comments and trailing commas
      "includes": [".vscode/**/*.json", ".devcontainer/**/*.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ]
}
